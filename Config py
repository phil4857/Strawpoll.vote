import os

class Config:
    # Use environment variable for database URL if available (Render)
    SQLALCHEMY_DATABASE_URI = os.getenv(
        "DATABASE_URL",
        "postgresql://postgres:yourpassword@localhost:5432/strawpoll"  # fallback for local dev
    )

    SQLALCHEMY_TRACK_MODIFICATIONS = False

    # You can add a secret key if youâ€™ll later handle sessions or JWTs
    SECRET_KEY = os.getenv("SECRET_KEY", "dev-secret-key")
